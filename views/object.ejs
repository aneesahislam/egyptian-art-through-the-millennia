<!doctype html>
<html>

<head>
    <title>Egyptian Art Through the Millennia</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/img/font-awesome.min.css">
    <link rel="stylesheet" href="/img/style2.css">
</head>

<body>

    <br>
    <div class="buttoncontainer">
    <a href="/index" class="btn btn-default"><span class="fa fa-user"></span>Home</a>
    </div>

    <section class="objectpagecontainer">
        <section class="objectpage">
            <h1>
                <%= art.title %>
            </h1>
            <img src="<%= art.primaryImageSmall %>" alt="Art Image" />

            <p>Period: <%= art.period %>
            </p>
            <p>Dynasy: <%= art.dynasty %>
            </p>
            <p>Material: <%= art.medium %>
            </p>
            <p>Dimensions: <%= art.dimensions %>
            </p>
        </section>

<section class="objectpagecomment">
    <h2>Leave a Comment</h2>
    <form action="/object/<%= art.objectID %>/art" method="POST">
        <input class="input" name="msg" type="text" placeholder="">
        <button type="submit">Submit</button>
        </form>
    <br>
    <ul>
        <% for (var i = 0; i < comments.length; i++) { %>
            <li>
                <span><%= comments[i].msg %></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
        <% } %>
    </ul>
    <script src="/main.js"></script>
</section>